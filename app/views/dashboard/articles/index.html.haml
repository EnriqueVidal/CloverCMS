%h2= t 'common.headers.item_list', :item => t('activerecord.models.article').pluralize

.splitcontentleft{ :style => 'width: 66%' }
  %p= t '.instructions'

  #articles
    %table.list
      %thead
        %tr
          %th= t 'common.fields.name'
          %th= t 'common.fields.created_at'
          %th= t 'common.fields.updated_at'
          %th= t 'common.messages.options'
      %tbody
        - @articles.each do |article|
          %tr{ :class => cycle(:odd, :even) }
            %td= link_to article.name, edit_dashboard_article_path(article)
            %td= article.created_at.to_s :long
            %td= article.updated_at.to_s :long
            %td
              = link_to t('links.edit'), edit_dashboard_article_path(article), :class => 'icon icon_bullet_pencil'
              = link_to t('links.destroy'), dashboard_article_path(article), :confirm => t('common.messages.are_you_sure'), :method => :delete, :class => 'icon icon_bullet_delete'
  = will_paginate @articles

.splitcontentright{ :style => 'width: 29%' }
  #tips_content.box
    %h3= t 'common.headers.did_you_know'
    %p= t '.tips'

- content_for :sidebar do
  #operations_placeholder
    %h3= t 'common.headers.item_operations', :item => t('activerecord.models.article')
    = link_to t('links.new_item', :item => t('activerecord.models.article')), new_dashboard_article_path, :class => 'icon icon_add'
