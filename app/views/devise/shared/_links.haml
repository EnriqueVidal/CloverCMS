- if controller_name != 'sessions'
  = link_to t('devise.links.sign_in'), new_session_path(resource_name)

- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to t('devise.links.sign_up'), new_registration_path(resource_name)

- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to t('devise.links.reset_password'), new_password_path(resource_name)

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t('devise.links.resend_confirmation'), new_confirmation_path(resource_name)

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to t('devise.links.resend_unlock'), new_unlock_path(resource_name)
