= include_yui_editor_if_used


%h3
  Editing pages
  
- form_for( @page, :url => { :action => :update } ) do |f|
  = f.error_messages
  = f.hidden_field :id
  %p
    = f.label :name
  %p
    = f.text_field :name
  %p
    = f.label :title
  %p
    = f.text_field :title
  %p
    = f.label :body
  %p
    = f.text_area :body, :class => 'rich_text_editor'
  %p
    = f.submit 'Update'
