#sections{ :style => 'width: 250px; float: left;' }
  %h3
    Sections
  
  = link_to_remote 'Add Section', :update => 'section_items', :url => "/sections/new", :after => "$('section_items').show();$('rendered_items').innerHTML='';$('rendered_items').hide();"
  = render :partial => 'sections/search_results', :locals => { :sections => @sections }

#section_items{ :style => 'width: 250px;float: left;display: none;' }
#rendered_items{ :style => 'width: 350px;float: left;display: none;' }