= include_yui_editor_if_used

%h3
  = "Add new Page to " + @subsection.name
  
- @page = Page.new
- form_for( @page, :url => { :controller => 'pages', :action => 'create' } ) do |f|
  = f.hidden_field :subsection_id, :value => @subsection.id
  
  = f.label :name
  %br
  = f.text_field :name
  %br
  = f.label :title
  %br
  = f.text_field :title
  %br
  = f.label :body
  %br
  = f.text_area :body, :class => 'rich_text_editor'
  %br
  #uploads
    = f.render_associated_form( @page.uploads, :new => 1 )
  %br
  = f.add_associated_link('Add another photo.', @page.uploads.build )
  %br
  %br
  = f.submit 'Create', :style => 'margin-bottom: 105px;'