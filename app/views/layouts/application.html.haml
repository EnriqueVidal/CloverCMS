!!!
%html
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }

    = javascript_include_tag        :defaults
    = calendar_date_select_includes "silver"
    = stylesheet_link_tag           "manager"
    = include_tiny_mce_if_needed

    %title CloverInteractive's Clever CMS Manager
  %body
    #wrapper
      #top-menu
        #account= render :partial => 'layouts/account_menu'
        %ul
          - if user_signed_in? && current_user.admin?
            %li= link_to 'Sections', '/sections'
            %li= link_to 'SEO', '/meta_tags'
            /%li= link_to 'Users', '/users'

      #header
        = image_tag '/images/logo.png'
        #main-menu= render :partial => 'layouts/main_menu'

      #main
        #sidebar
        #content
          = render_flash_messages
          = yield

    %script{ :type => 'text/javascript' }
      //<![[CDATA
      document.observe("dom:loaded", function(){
      var messages = new Array('flashError', 'flashSucces', 'flashNotice');
      for (var i = 0; i < messages.length; i++)
      try
      {
      setTimeout("$('" + messages[i] + "').fade({ duration: 1.5 })", 5000);
      }
      catch(e) {}
      });
      //]]>

