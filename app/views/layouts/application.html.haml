!!!
%html
  %head
    = javascript_include_tag  :defaults
    = #javascript_include_tag 'cropper/lib/scriptaculous.js?load=builder,dragdrop'
    = #javascript_include_tag 'cropper/cropper.js'

    = calendar_date_select_includes "silver"
    = stylesheet_link_tag           "manager"
    = include_tiny_mce_if_needed

    %title CloverInteractive's Clever CMS Manager
  %body
    #wrapper
      #top-menu
        #account
          = render :partial => 'layouts/account_menu'
        %ul
          %li= link_to 'Sections', '/sections'
          %li= link_to 'Subsections', '/subsections'
          %li= link_to 'SEO', '/meta_tags'
          %li= link_to 'Users', '#'

      #header
        = image_tag '/images/logo.png'
        #main-menu
          = render :partial => 'layouts/main_menu'

      #main
        #sidebar
        #content
          = flash[:notice]  unless flash[:notice].nil?
          = flash[:error]   unless flash[:error].nil?
          = flash[:success] unless flash[:success].nil?

          = yield

