!!!
%html
  %head
    = javascript_include_tag  :defaults
    = #javascript_include_tag 'cropper/lib/scriptaculous.js?load=builder,dragdrop'
    = #javascript_include_tag 'cropper/cropper.js'

    = calendar_date_select_includes "silver"
    = stylesheet_link_tag           "manager"
    = include_tiny_mce_if_needed

    %title CloverInteractive's Clever CMS Manager
  %body
    #wrapper
      #top-menu
        #account
          = render :partial => 'layouts/account_menu'
        %ul
          - if logged_in? && current_user.admin?
            %li= link_to 'Sections', '/sections'
            - if Subsection.all.count > 0
              %li= link_to 'Subsections', '/sections/' + Subsection.first.section.id.to_s + '/subsections'
            
            %li= link_to 'SEO', '/meta_tags'
            %li= link_to 'Users', '/users'

      #header
        = image_tag '/images/logo.png'
        #main-menu
          = render :partial => 'layouts/main_menu'

      #main
        #sidebar
        #content
          = render_flash_messages
          = yield
          
    %script{ :type => 'text/javascript' }
      //<![[CDATA
      var messages = new Array('flashError', 'flashSucces', 'flashNotice');
      for (var i = 0; i < messages.length; i++)
      try
      {
      $(messages[i]).fade({ duration: 6 });
      }
      catch(e) {}
      //]]>

