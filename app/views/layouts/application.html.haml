!!!
%html
  %head
    = javascript_include_tag  :defaults
    = #javascript_include_tag 'cropper/lib/scriptaculous.js?load=builder,dragdrop'
    = #javascript_include_tag 'cropper/cropper.js'
    
    = papermill_stylesheet_tag
    = papermill_javascript_tag :with_jquery => "no_conflict"
    
    = calendar_date_select_includes "silver"
    = stylesheet_link_tag           "scaffold"
    = stylesheet_link_tag           "manager"
    = include_tiny_mce_if_needed

    %title
      Clover CMS Manager
  %body
    .menu{ :style => 'background-color: #333333;margin-left: 0; margin-right:0; height: 32px; margin-top: 5px; margin-bottom: 0px;' }
      #menu-nav
        %ul
          %li
            = link_to 'Pages', '/manager'
          %li
            = link_to 'SEO', '/manager/seo'
          %li
            = link_to 'Users', '#'
              
    #manager
      .messages
        - if flash[:notice]
          #flash_notice
            = flash[:notice]

        - if flash[:error]
          #flash_error
            = flash[:error]

        - if flash[:success]
          #flash_success
            = flash[:success]
      = yield
