!!!5
%html
  %head
    %title= content_for?(:title) ? yield(:title) : 'CloverInteractive'
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'jquery-1.4.2.min', 'rails', 'application'
    = yield :head
    = csrf_meta_tag

  %body
    #wrapper
      #top=yield :top
      - if content_for? :nav_wrap
        #nav_wrap= yield :nav_wrap

      #content_wrap
        #content
          - if content_for? :module
            .module
              %h2.title= t "activerecord.models.#{ controller_name.singularize }"
              .module_body= yield
          - else
            = yield

      - if content_for? :footer
        #footer_wrap
          #footer= yield :footer
