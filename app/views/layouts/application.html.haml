!!!
%html
  %head
    = javascript_include_tag  :defaults
    = calendar_date_select_includes "silver"
    = stylesheet_link_tag     "scaffold"
    = include_yui_editor_if_used

    %title
      Clover CMS Manager
  %body
    #header
    #decoration_top
    #wrapper
      =image_tag('logo.png')

      #contenido
        .messages
          - if flash[:notice]
            #flash_notice
              = flash[:notice]

          - if flash[:error]
            #flash_error
              = flash[:error]

          - if flash[:success]
            #flash_success
              = flash[:success]

        .content
          = yield
      #push
    #footer
      #decoration_bottom
      #green

