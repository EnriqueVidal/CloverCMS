#imid
  #column
    - if current_page.present?
      %h2.sb_header= current_page.title.length > 33 ? "Descubre más" : current_page.title
      .sidebar
        %ul.services
          - pages.each do |page|
            %li= link_to page.title, show_section_page_path( section.name, page.name)

          - section.subsections.each do |subsection|
            - subsection.pages.each do |page|
              - if current_page.name != page.name
                %li= link_to page.title, show_subsection_page_path( section.name, subsection.name, page.name )
    - elsif current_controller == 'articles' || ( current_controller == 'viewer'  && current_action == 'show_article_list')
      %h2.sb_header= 'Articulos'
      .sidebar
        %ul.services
          %li= link_to 'Blog',      'blogs'
          %li= link_to 'Noticias',  'news'
          %li= link_to 'Reseñas',   'reviews'
             
      /
        %p.right= link_to "<span>More</span>", "#", :class => "button2"
        
    .sidebar_bottom
  #content= yield