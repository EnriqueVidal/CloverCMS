!!!5
%html
  %head
    - if Rails.env.production?
      = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js" 
      = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js"
    - else
      = javascript_include_tag 'jquery-1.4.2.min', 'jquery-ui-1.8.5.custom.min'

    = javascript_include_tag 'rails', "/wymeditor/jquery.wymeditor.js"
    = javascript_include_tag "/javascripts/boot_wym.js", "application", "/uploadify/swfobject.js", "/uploadify/uploadify.min.js"
    
    = stylesheet_link_tag 'manager', 'themes/smoothness/jquery-ui-1.8.6.custom.css', '/uploadify/uploadify.css'
    %title CloverInteractive's Clever CMS Manager
    = csrf_meta_tag
  %body
    #wrapper
      #top-menu
        #account= render 'layouts/manager/account_menu'
        %ul
          - if user_signed_in? && current_user.admin?
            %li= link_to 'Sections', '/sections'
            %li= link_to 'Articles', '/articles'
      #header
        = image_tag 'logo.png'
        #main-menu= render 'layouts/manager/main_menu'
      #main
        #sidebar
          = yield :sidebar
        #content
          = yield
          = yield :jstemplates