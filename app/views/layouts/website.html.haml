!!!
%html
  %head
    - if !@page.meta_title.nil?
      %meta{ :name => 'title', :content => @page.meta_title.content }
      
    - if !@page.meta_description.nil?
      %meta{ :name => 'description', :content => @page.meta_description.content }
  
    = javascript_include_tag  :defaults
    = calendar_date_select_includes "silver"
    = stylesheet_link_tag "scaffold"
    %title
      = @page.title || 'Clover CMS'
  %body
    #header
    #wrapper
      =image_tag('logo.png')
      #contenido
        .messages
          - if flash[:notice]
            #flash_notice
              = flash[:notice]

          - if flash[:error]
            #flash_error
              = flash[:error]

          - if flash[:success]
            #flash_success
              = flash[:success]


          - for section in Section.all
            = link_to section.name, show_section_page_path( :section_name => section.name, :page_name => section.pages.first.name )

        .content
          = yield
      #push
    #footer
      #green

