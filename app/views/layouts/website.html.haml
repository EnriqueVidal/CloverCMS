!!!
%html
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
    - if !@page.meta_title.nil?
      %meta{ :name => 'title', :content => @page.meta_title.content }

    - if !@page.meta_description.nil?
      %meta{ :name => 'description', :content => @page.meta_description.content }

    - if @page.tag_list.count >= 1
      %meta{ :name => 'keywords', :content => @page.tag_list.join(', ') }

    = javascript_include_tag  :defaults
    = calendar_date_select_includes "silver"
    = stylesheet_link_tag "scaffold"
    %title
      = 'CloverInteractive: ' + @page.title
  %body
    #header
    #wrapper
      =image_tag('logo.png')
      #contenido
        .messages
          - if flash[:notice]
            #flash_notice
              = flash[:notice]

          - if flash[:error]
            #flash_error
              = flash[:error]

          - if flash[:success]
            #flash_success
              = flash[:success]


          - for section in Section.all
            = link_to(section.name, show_section_page_path( :section_name => section.name, :page_name => section.pages.first.name )) if !section.pages.blank?

        .content
          = yield
      #push
    #footer
      #green

