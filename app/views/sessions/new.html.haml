%script{ :type => 'text/javascript' }
  $(document).ready(function(){ $('#main').addClass('nosidebar'); });

#login-form
  - form_for resource_name, resource, :url => session_path(resource_name) do |f|
    %table
      %tr
        %td{ :align => :right }= f.label :username, 'Username'
        %td{ :align => :left }= f.text_field :username, :size => 40
      %tr
        %td{ :align => :right }= f.label :password
        %td{ :align => :left }= f.password_field :password, :size => 40
      %tr
        %td
        %td

      - if devise_mapping.rememberable?
        %tr
          %td{ :align => :right }= f.check_box :remember_me
          %td{ :align => :left }= f.label :remember_me
      %tr
        %td
        %td{ :align => :left }= f.submit "Sign in"

= render 'shared/devise_links'

