%h2 Editing article
#tabs
  %ul
    %li= link_to 'Page details',  '#tabs-1'
    %li= link_to 'Page keywords', '#tabs-2'
    %li= link_to 'Page files',    '#tabs-3'
  #tabs-1
    = render 'form'
  #tabs-2
    = render 'shared/keywords', :keywords => @article.keywords.map(&:name)
    .spacer
  #tabs-3
    .splitcontentleft
      #images_list
        - @article.assets.each do |asset|
          = image_tag asset.asset.url(:small)
      %file#uploadify{ :name => 'asset' }
    .splitcontentright
    = render 'shared/uploadify', :object => @article
    .spacer
:javascript
  $(function() {
    add_images();
  })